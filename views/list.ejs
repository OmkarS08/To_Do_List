<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%= ListTittle %>
        </h1>
    </div>
    <div class="box">

        <% newKindItem.forEach(elements => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value=<%=elements._id %> onChange="this.form.submit()">
                    <p>
                        <%= elements.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%=ListTittle %>">
            </form>
            <% }); %>
                <form class="item" action="/" method="post">
                    <input type="text" name="newInput" placeholder="New Item" autocomplete="off">
                    <!--autocomplete is suggestion/earlier text in the text box-->
                    <button type="submit" name="list" value="<%= ListTittle %>">+</button>
                </form>
    </div>


    <%- include("footer") -%>